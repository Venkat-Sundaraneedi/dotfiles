{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true
    },
    "solana-mcp-server": {
      "type": "remote",
      "url": "https://mcp.solana.com/mcp",
      "enabled": true
    },
    "firecrawl-mcp": {
      "type": "local",
      "command": ["bunx", "-y", "firecrawl-mcp"],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_URL": "http://localhost:3002"
      }
    }
  },
  "plugin": [
    "oh-my-opencode@latest",
    "@plannotator/opencode@latest",
    "cc-safety-net",
    "@ramtinj95/opencode-tokenscope"
  ]
}
